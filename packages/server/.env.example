# Server Configuration
PORT=8080
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/gameportal
REDIS_URL=redis://localhost:6379

# Discord OAuth
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:3000/auth/callback

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=7d

# Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_password

# Storage Configuration
# Using MongoDB GridFS (free, included in MongoDB Atlas)
# Max file size in bytes (default: 5MB)
MAX_FILE_SIZE=5242880

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# EliteZero Bot Integration
ELITEZERO_WEBHOOK_SECRET=shared_secret_between_bot_and_portal
ELITEZERO_API_KEY=api_key_for_bot_to_call_portal

# Monitoring (Optional)
SENTRY_DSN=
